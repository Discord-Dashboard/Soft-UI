<script>
    $(window).scroll(async function () {
        if ($(window).scrollTop() > 300) {
            $("#backButton").slideDown();
            $("#themeButton").fadeOut();

        } else {

            $("#backButton").slideUp();

            $("#themeButton").show();
        }
    });

    $("#backButton").on('click', function (e) {
        $('html, body').animate({scrollTop: 0}, '250');
    });

</script>
